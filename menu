#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int numero;


int main(){
char name[5] [50],endereco[5] [50],cidade [5] [50], estado [5] [50];
    char cpf[5] [50];
    int i=i;
    int quant;

{
    setlocale(LC_ALL,"portuguese");


