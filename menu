        printf("quantas clientes você quer cadastrar ?\n");
    scanf("%d", & quant);

    for(i=0;i<quant;i++){
        printf("Digite nome:\n");
        fflush(stdin);
        scanf("%s", & name);
        printf("Digite endereco:\n");
        fflush(stdin);
        scanf("%s", & endereco);
        printf("Digite cidade:\n");
        fflush(stdin);
        scanf("%s", & cidade);
